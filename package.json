{
  "scripts": {
    "dist": "node -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "dev": "nodemon --exec ts-node src/server.ts",
    "test": "jest --runInBand ./tests",
    "clear-cache": "jest --clearCache",
    "coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/server.ts"
    ]
  },
  "resolutions": {
    "graphql": "^15.3.0"
  },
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/merge": "^6.2.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.21",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "apollo-server": "^2.21.2",
    "apollo-server-express": "^2.21.2",
    "bcrypt": "^5.0.1",
    "debug": "^4.3.1",
    "easygraphql-tester": "^5.1.6",
    "eslint": "^7.22.0",
    "eslint-plugin-import": "^2.22.1",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "faker": "^5.4.0",
    "graphql": "^15.3.0",
    "graphql-import-node": "^0.0.4",
    "graphql-tag": "^2.11.0",
    "jest": "^26.6.3",
    "jest-transform-graphql": "^2.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb-memory-server": "^6.9.6",
    "mongoose": "^5.12.1",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "yaml": "^1.10.2"
  }
}
