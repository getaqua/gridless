{
  "name": "gridless",
  "private": true,
  "license": "GPL-3.0-or-later",
  "version": "0.1.0-dev",
  "scripts": {
    "dist": "node -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "dev": "nodemon --exec ts-node src/server.ts",
    "test": "jest --runInBand ./tests",
    "clear-cache": "jest --clearCache",
    "coverage": "jest --coverage",
    "prep-db": "docker start gridless-mongo && sleep 5 && docker start gridless-mongo-express"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/server.ts"
    ]
  },
  "resolutions": {
    "graphql": "^15.3.0"
  },
  "dependencies": {
    "@graphql-tools/merge": "^6.2.10",
    "@iconify/react-with-api": "^1.0.0-rc.7",
    "@material-ui/core": "^4.11.3",
    "@react-ssr/core": "^0.24.0",
    "apollo-server": "^2.21.2",
    "apollo-server-express": "^2.21.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "consolidate": "^0.16.0",
    "cookie-parser": "^1.4.5",
    "debug": "^4.3.1",
    "easygraphql-tester": "^5.1.6",
    "eslint": "^7.22.0",
    "eslint-plugin-import": "^2.22.1",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "extended-snowflake": "^2.1.0",
    "faker": "^5.4.0",
    "graphql": "^15.3.0",
    "graphql-import-node": "^0.0.4",
    "graphql-tag": "^2.11.0",
    "jest": "^26.6.3",
    "jest-transform-graphql": "^2.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb-memory-server": "^6.9.6",
    "mongoose": "^5.12.1",
    "nodemon": "^2.0.7",
    "nunjucks": "^3.2.3",
    "password-validator": "^5.1.1",
    "read-package-json": "^3.0.1",
    "src": "link:./src",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tsx": "^1.0.0",
    "typescript": "^4.2.3",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.21",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.35",
    "@types/nunjucks": "^3.1.4",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0"
  }
}
